// refer https://code.visualstudio.com/docs/cpp/launch-json-reference
// https://puremourning.github.io/vimspector/configuration.html
{
  // debugger settings
  "configurations": {
    "run - $current.c - Launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "type": "cppdbg ",
        // *.exe file
        "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
        // main method stop?
        "stopAtEntry": "true",
        "cwd": "${cwd}",
        "MIMode": "gdb",
        "MIDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe"
      }
    },

    "run with args - $current.c": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "type": "cppdbg ",
        "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
        // main method stop?
        "stopAtEntry": "true",
        "cwd": "${cwd}",
        "args#json": "${args:[]}",
        "MIMode": "gdb",
        "MIDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe"
      }
    }
  }
}
